<%- include("./partials/header.ejs") %>

<div class="container">
  <div class="verification-error">
    <div class="icon-error">!</div>
    <h1>Verification Failed</h1>
    <p><%= error || 'The verification link is invalid or has expired.' %></p>
    <form
      action="/api/auth/resend-verification"
      method="POST"
      class="resend-form"
    >
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
        class="form-control"
      />
      <button type="submit" class="btn btn-primary">
        Resend Verification Email
      </button>
    </form>
  </div>
</div>

<style>
  .verification-error {
    max-width: 500px;
    margin: 100px auto;
    text-align: center;
    padding: 40px 20px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .icon-error {
    font-size: 48px;
    color: #dc3545;
    background: #f8d7da;
    width: 80px;
    height: 80px;
    line-height: 80px;
    border-radius: 50%;
    margin: 0 auto 20px;
  }

  .resend-form {
    margin-top: 20px;
  }

  .form-control {
    width: 100%;
    padding: 8px;
    margin: 10px 0;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  .btn-primary {
    display: inline-block;
    padding: 10px 30px;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn-primary:hover {
    background: #0056b3;
  }
</style>

<%- include("./partials/footer.ejs") %>
