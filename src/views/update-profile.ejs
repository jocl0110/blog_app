<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="profile-form">
    <h2>Update Profile</h2>

    <form
      action="/api/auth/profile?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="current-image">
        <img
          src="<%= user.profile_image || '/images/default.png' %>"
          alt="Profile Image"
        />
      </div>

      <div class="form-group">
        <label for="profile_image">Profile Image</label>
        <input
          type="file"
          id="profile_image"
          name="profile_image"
          accept="image/*"
          class="form-control"
        />
      </div>

      <div class="form-group">
        <label for="first_name">First Name</label>
        <input
          type="text"
          id="first_name"
          name="first_name"
          value="<%= user.first_name %>"
          required
          class="form-control"
        />
      </div>

      <div class="form-group">
        <label for="last_name">Last Name</label>
        <input
          type="text"
          id="last_name"
          name="last_name"
          value="<%= user.last_name %>"
          required
          class="form-control"
        />
      </div>

      <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
  </div>
</div>

<style>
  .profile-form {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
  }

  .current-image {
    text-align: center;
    margin-bottom: 1rem;
  }

  .current-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
  }
</style>

<%- include('./partials/footer.ejs') %>
